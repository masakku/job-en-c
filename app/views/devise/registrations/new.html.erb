<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class="form-wrap">
  <div class="form-header">
    <h1 class="form-header-text">
      新規会員登録
    </h1>
  </div>

  <%= render "shared/error_messages", model: f.object %>


  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">名前</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id: "nickname" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前（カナ入力）</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name_kana, class:"input-default", id:"name-kana", placeholder: "全角カタカナ文字" %>
  </div>


  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id: "email", autofocus: true %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id: "password", placeholder:"6文字以上の半角英数字混合" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">プロフィール</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :profile, class:"profile-text", id: "profile", placeholder: "自己紹介(1000文字まで)", rows:"7", maxlength:"1000" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">職業</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :occupation, class:"input-default", id: "occupation" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">役職</label>
    </div>
    <%= f.text_area :position, class:"input-default", id: "position" %>
  </div>

  <div class="register-btn">
    <%= f.submit "会員登録", class: "register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>


